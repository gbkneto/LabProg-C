# LabProg-C
Exercicio em Linguagem C

 #include <stdio.h>
 #include <stdlib.h>
 int main()
 {
int prod, unidad;
float preco, vatt;
printf("Insira o codigo do produto comprado:\n");
scanf("%d", &prod);
        switch (prod) {
        case 1:
            printf("Refri lata\n");
            preco=4.20;
            break;
        case 2:
            printf("Refri garrafa\n");
            preco=3;
            break;
        case 3:
            printf("1 bola de sorvete\n");
            preco=2.50;
            break;
        case 4:
            printf("2 bola de sorvete\n");
            preco=6;
            break;
        case 5:
            printf("Banana Split\n");
            preco=6;
            break;
        case 6:
            printf("Especial da casa\n");
            preco=8.5;
            break;
}
printf("Insira a quantidade comprada:\n");
scanf("%d", &unidad);
vatt=preco*unidad;
printf("Valor total da compra %f", vatt);
return 0;
 }
